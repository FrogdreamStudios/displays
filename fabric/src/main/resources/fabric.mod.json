{
  "schemaVersion": 1,
  "id": "dreamdisplays",
  "name": "Dream Displays",
  "version": "${version}",
  "license": "LGPL-3.0",
    "description": "Create in-game screens to stream videos on any Minecraft server.",
  "authors": ["arsmotorin, INotSleep"],
  "entrypoints": {
    "client": [
      "dreamdisplays.DreamDisplaysMod"
    ]
  },
  "mixins": [
    "dreamdisplays.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.17",
    "fabric": "*",
    "minecraft": "1.21.10",
    "java": ">=21"
  },
  "custom": {
    "modmenu": {
      "badges": ["library"]
    },
    "quilt_loader": {
      "id": "dreamdisplays",
      "group": "dreamdisplays",
      "provides": [
        {
          "id": "dreamdisplays",
          "version": "${version}"
        }
      ]
    }
  },
  "icon": "assets/dreamdisplays/icon.png"
}
